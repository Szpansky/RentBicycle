<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activities.WalletActivity">

    <com.apps.mkacik.rentbicycle.layouts.WalletStatusLayout
        android:id="@+id/walletView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cashInteger="19"
        app:cashIntegerExtend="zÅ‚"
        app:cashRest="89"
        app:cashRestExtend="gr"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/walletView">

        <Button
            android:id="@+id/addCashButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/oval_rectangle"
            android:text="@string/add_cash"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/TransactionHistoryButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/oval_rectangle"
            android:text="@string/transaction_history"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="295dp" />

        <Button
            android:id="@+id/backButton"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/oval_rectangle"
            android:text="@string/back"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="295dp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>