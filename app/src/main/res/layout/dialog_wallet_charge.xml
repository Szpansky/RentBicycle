<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimary"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <Button
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_margin="8dp"
            android:background="@drawable/oval_rectangle"
            android:clickable="false"
            android:focusable="false"
            android:text="@string/charge_with"
            android:textAllCaps="true" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.apps.mkacik.rentbicycle.layouts.MenuButton
                android:id="@+id/add_5_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:description="5"
                app:image="@drawable/icon_money_white"
                app:srcCompat="@drawable/circle" />

            <com.apps.mkacik.rentbicycle.layouts.MenuButton
                android:id="@+id/add_10_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:description="10"
                app:image="@drawable/icon_money_white"
                app:srcCompat="@drawable/circle">


            </com.apps.mkacik.rentbicycle.layouts.MenuButton>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.apps.mkacik.rentbicycle.layouts.MenuButton
                android:id="@+id/add_25_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:description="25"
                app:image="@drawable/icon_money_white"
                app:srcCompat="@drawable/circle">


            </com.apps.mkacik.rentbicycle.layouts.MenuButton>

            <com.apps.mkacik.rentbicycle.layouts.MenuButton
                android:id="@+id/add_50_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:description="50"
                app:image="@drawable/icon_money_white"
                app:srcCompat="@drawable/circle">

            </com.apps.mkacik.rentbicycle.layouts.MenuButton>
        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>