<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorPrimaryTransparent_99"
    android:layout_gravity="center"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <com.apps.mkacik.rentbicycle.layouts.RoundImageTextLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:description="@string/add"
            android:layout_marginBottom="25dp"
            app:image="@drawable/icon_money_white"
            app:srcCompat="@drawable/circle" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/add_5_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:textSize="25sp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/oval_rectangle"
                android:clickable="false"
                android:focusable="false"
                android:text="5"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/add_10_button"
                android:textSize="25sp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/oval_rectangle"
                android:clickable="false"
                android:focusable="false"
                android:text="10"
                android:textAllCaps="true" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/add_25_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/oval_rectangle"
                android:clickable="false"
                android:focusable="false"
                android:textSize="25sp"
                android:text="25"
                android:textAllCaps="true" />

            <Button
                android:id="@+id/add_50_button"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="125dp"
                android:layout_height="50dp"
                android:layout_margin="8dp"
                android:background="@drawable/oval_rectangle"
                android:clickable="false"
                android:focusable="false"
                android:textSize="25sp"
                android:text="50"
                android:textAllCaps="true" />


        </TableRow>
    </TableLayout>

</androidx.cardview.widget.CardView>